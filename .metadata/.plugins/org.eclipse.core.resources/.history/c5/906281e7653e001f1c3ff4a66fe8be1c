package com.kh.practice.test2;

public class Task1 extends Thread {

	@Override
	public void run() {
		// 1 ~ 30까지 짝수만 출력
		int num = 0;
		for(int i=0; i<30; i++) {
			if(num % 2 == 0) {
				System.out.println(num);
				num++;
			}
		}
		// 출력 후 0.1초 재우기
		try {
			Thread.sleep(100);
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
	

}
